# Invisible Fence Automation Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Maps API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=YOUR_API_KEY_HERE

# Server Configuration
PORT=3333
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./database.sqlite

# Authentication (optional)
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=24h

# Firebase Configuration (optional)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# Email Service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Twilio SMS (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Service Areas (comma-separated zip codes)
SERVICE_AREAS=75001,75002,75201,75202,75203,75204,75205

# Pricing Configuration
BASE_PRICE_PER_FOOT=15
GATE_BASE_PRICE=250
CORNER_CHARGE=25

# Feature Flags
ENABLE_GOOGLE_MAPS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FIREBASE_AUTH=false